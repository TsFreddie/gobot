{
  "name": "pbgo",
  "version": "1.0.0-alpha.4",
  "description": "PocketBase binary installer",
  "repository": "github:pockethost/pbgo",
  "type": "module",
  "main": "./dist/api.js",
  "bin": {
    "pbgo": "./dist/cli.js",
    "pocketbase": "./src/cli.js"
  },
  "types": "dist/api.d.ts",
  "scripts": {
    "prepack": "rimraf -v --glob \"pbgo-*\" pb_data",
    "bump": "npm version prerelease --preid alpha --no-git-tag-version",
    "build": "rimraf dist && tsup-node src/cli.ts src/api.ts --dts src/api.ts --format esm",
    "dev": "tsx src/cli.ts",
    "test": "pnpm build && npm pack && npm rm -g pbgo && npm i -g pbgo-1.0.0-alpha.3.tgz && pbgo --debug --help"
  },
  "keywords": [
    "pocketbase",
    "pockethost"
  ],
  "author": {
    "name": "Ben Allfree",
    "url": "https://github.com/benallfree"
  },
  "license": "ISC",
  "dependencies": {
    "@s-libs/micro-dash": "^17.1.0",
    "commander": "^12.0.0",
    "env-paths": "^3.0.0",
    "jszip": "^3.10.1",
    "node-fetch": "^3.3.2",
    "semver": "^7.6.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.15",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.20.1",
    "esbuild-node-externals": "^1.13.0",
    "ncp": "^2.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
