{
  "name": "gobot",
  "version": "1.0.0-alpha.7",
  "description": "Install and run any Go-based app",
  "repository": "github:benallfree/gobot",
  "type": "module",
  "main": "./dist/api.js",
  "bin": {
    "gobot": "./dist/cli.js",
    "pocketbase": "./src/cli.js"
  },
  "types": "dist/api.d.ts",
  "scripts": {
    "prepack": "rimraf -v --glob \"gobot-*\" pb_data",
    "bump": "npm version prerelease --preid alpha",
    "build": "rimraf dist && tsup-node src/cli.ts src/api.ts --dts src/api.ts --format esm",
    "dev": "tsx src/cli.ts",
    "test": "pnpm build && npm pack && npm rm -g gobot && npm i -g gobot-`cat package.json | fx '.version'`.tgz && gobot --debug --help",
    "docs": "typedoc --excludePrivate"
  },
  "keywords": [
    "pocketbase",
    "pockethost"
  ],
  "author": {
    "name": "Ben Allfree",
    "url": "https://github.com/benallfree"
  },
  "license": "ISC",
  "dependencies": {
    "@s-libs/micro-dash": "^17.1.0",
    "@types/node": "^20.11.24",
    "@xhmikosr/decompress-targz": "^7.0.0",
    "@xhmikosr/decompress-unzip": "^6.0.0",
    "bottleneck": "^2.19.5",
    "commander": "^12.0.0",
    "decompress": "^4.2.1",
    "env-paths": "^3.0.0",
    "filenamify": "^6.0.0",
    "jszip": "^3.10.1",
    "node-fetch": "^3.3.2",
    "rimraf": "^5.0.5",
    "semver": "^7.6.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.7",
    "@types/semver": "^7.5.8",
    "@types/shelljs": "^0.8.15",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.20.1",
    "esbuild-node-externals": "^1.13.0",
    "fx": "^31.0.0",
    "ncp": "^2.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typedoc": "^0.25.9",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3"
  }
}
